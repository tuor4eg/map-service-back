{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src", 
      "strict": true,
      "esModuleInterop": true,
      "target": "ES6",
      "module": "commonjs",
      "typeRoots": ["./types", "./node_modules/@types"],
      "resolveJsonModule": true
    },
    "include": ["src/**/*", "types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  